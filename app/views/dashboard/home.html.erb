<div class="ui middle aligned center aligned grid h-100 bg-one">
    <div class="row">
      <div class="five wide column">
    <%=image_tag 'logo-cbcl.jpg', class:"image" %>
  <div class="ui teal header">
    <h1 class="content">Obtención de Certificados</h1>
  </div>
        <%= render 'form'%>
      </div>      
    </div>      
     <%if @student.nil? && @existe%>
      <% elsif @student && !@existe %>
        
          <div class="ui negative message h-fit">
            <i class="close icon"></i>
            <div class="header">
              Estudiante no encontrado.
            </div>
            <p>Verifique su run</p>
          </div>
        
      <% else %>
       <div class="ui top attached w-75">
       
              <table class="ui teal celled table">
                <thead>
                  <tr><th>NOMBRE</th>
                  <th>RUN</th>
                  <th>EMAIL</th>
                  <th>GENERACIÓN</th>
                  <th>CERTIFICACIÓN</th>
                </tr></thead>
                <tbody>
                  <% @student.each do |student| %>
                      <tr>
                      <td data-label="NOMBRE"><%=student.name%></td>
                      <td data-label="RUN"><%=student.run%></td>
                      <td data-label="EMAIL"><%=student.email%></td>
                      <td data-label="GENERACIÓN"><%=student.generation%></td>
                      <td data-label="CERTIFICACIÓN">
                        <%= link_to(certification_path(student.run),class:"ui right labeled olive inverted icon button") do%>
                            Certificación<i class="download icon"></i>
                        <% end %>
                        <%= link_to(diploma_path(student.run),class:"ui right labeled green inverted icon button") do%>
                            Diploma<i class="download icon"></i>
                        <% end %>
                        </td>
                      </tr>
                    
                  <% end %>
                </tbody>
              </table>
        </div>      
      <% end %>
</div>
    
     
